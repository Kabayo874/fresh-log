<div>
  <%= form_with model: [@item, @item_post] do |f| %>
    <%= f.text_area :item_post, rows: '5' %>


    <div class="pt-2">
      <label for="post">Opinion</label>
      <%= f.text_area :item_post, row: '5', id:"post", class: "form-control" %>
    </div>

    <div class="pt-2">
      <label for="image">Image</label>
      <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div class="pt-2">
      <%= f.submit '登録', class: "btn btn-success" %>
    </div>
  <% end %>
</div>