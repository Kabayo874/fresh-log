<h1>編集画面</h1>
<%= form_with model: [@item, @item_post] do |f| %>
  
  <div>
    <%= f.text_area :review %>
  </div>

  <div class="pt-2">
    <label for="image">Image</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  
  <div>
    <%= f.submit '保存' %>
  </div>

  <div>
    <% if @item.user == current_user %>
      <%= link_to "削除", item_path(@item), method: :delete %>
    <% end %>
  </div>
  
<% end %>