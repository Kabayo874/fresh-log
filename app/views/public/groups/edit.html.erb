<div class="container">
  <div class="row d-flex flex-wrap mt-3">
    <div class="col-12 col-md-4 col-lg-3">
      <%= render 'group_profile', group: @group %>
    </div>

    <div class="col-12 col-md-8 col-lg-9 mb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto border rounded-5 px-0 my-5 overflow-hidden">
            <h5 class="text-dark bg-light p-4 mb-0 d-flex justify-content-between align-items-center">
              グループ編集
              <a href="javascript:history.back();">
                <i class="fa-solid fa-xmark" style="color: #005eff; font-size: 20px;"></i>
              </a>
            </h5>
            <div class="form-body p-4">
              <%= form_with model: @group, local: true do |f| %>
                <%= render 'layouts/error_messages', model: f.object %>

                <div>
                  <label for="inputName">グループ名</label>
                  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"グループ名", class: "form-control" %>
                </div>
                <div class="pt-2">
                  <label for="inputDescription">グループ紹介</label>
                  <%= f.text_area :description, autofocus: true, id:"inputDescription", placeholder:"自己紹介", class: "form-control" %>
                </div>
                <div class="pt-2">
                  <label for="inputImage">グループ画像</label>
                  <%= f.file_field :image, id:"inputImage", placeholder: "グループ画像", accept: "image/*" %>
                </div>
                <div class="pt-2">
                  <%= f.submit "変更を保存", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- 退会リンク -->
        <div class="text-center my-4">
          <%= link_to "グループ解散", group_path(@group), method: :delete, data: { confirm: "グループの投稿も削除されます。本当にグループを解散しますか？" }, class: "text-secondary" %>
        </div>
      </div>
    </div>

  </div>
</div>
