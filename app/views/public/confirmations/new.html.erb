
    <div class="col-lg-9">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto border rounded-5 px-0 my-5 overflow-hidden">
            <h5 class="text-dark bg-light p-4 mb-0">アカウント作成</h5>
            <div class="form-body p-4">


              <%= form_with(model: resource, scope: resource_name, url: confirmation_path(resource_name), method: :post, local: true) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
            

                <div>
                  <label for="inputemail">email</label>
                  <%= f.text_field :email, autofocus: true, id:"inputemail", placeholder:"メールアドレス", class: "form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
                </div>
                <div class="action pt-2">
                  <%= f.submit "再送信", class: "btn btn-secondary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

