<div class="container">
  <div class="row d-flex flex-wrap m-5">
    <div class="col-lg-3">
      <%= render 'profile', user: @user %>
    </div>

    <div class="col-lg-9">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto border rounded-5 px-0 my-5 overflow-hidden">
            <h5 class="text-dark bg-light p-4 mb-0 d-flex justify-content-between align-items-center">
              プロフィール編集
              <a href="javascript:history.back();">
                <i class="fa-solid fa-xmark" style="color: #005eff; font-size: 20px;"></i>
              </a>
            </h5>
            <div class="form-body p-4">
              <%= form_with model: @user do |f| %>
                <%= render 'layouts/error_messages', model: f.object %>

                <div>
                  <label for="inputName">ニックネーム</label>
                  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
                </div>
                <div class="pt-2">
                  <label for="inputProfile">自己紹介</label>
                  <%= f.text_area :profile, autofocus: true, id:"inputProfile", placeholder:"自己紹介", class: "form-control" %>
                </div>
                <div class="pt-2">
                  <label for="inputImage">プロフィール画像</label>
                  <%= f.file_field :profile_image, id:"inputImage", placeholder: "プロフィール画像", accept: "image/*" %>
                </div>
                <div class="pt-2">
                  <%= f.submit "変更を保存", class: "btn btn-secondary" %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- 退会リンク -->
          <div class="text-center my-4">
          <%= link_to "退会する", registration_path(:user), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "text-secondary" %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>