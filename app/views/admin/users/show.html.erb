<div class="container">
  <div class="row d-flex flex-wrap mt-3">
    <div class="col-12 col-md-4 col-lg-3">
    <%= render partial: 'admin/items/filter_bar', locals: { filter_url: user_path(@user) } %>
    </div>

    <div class="col-12 col-md-8 col-lg-9 mb-4">
      <div class="row">
        <h4>ユーザー投稿一覧</h4>
        <%= render partial: 'admin/items/filter_bar' %>
      </div>

      <div class="row">

        <% @cards.each do |card| %>
          <%= render "admin/items/card", card: card %>
        <% end %>
      </div>

      <div class="d-flex justify-content-center my-4">
        <%= paginate @cards %>
      </div>
    </div>
  </div>
</div>
