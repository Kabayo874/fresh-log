
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto border rounded-5 px-0 my-5 overflow-hidden">
      <h5 class="text-dark bg-light p-4 mb-0">全ユーザー一覧</h5>

      <div class="table-responsive p-4">
        <table class="table table-striped table-hover text-center align-middle">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>アイコン</th>
              <th>名前</th>
              <th>メールアドレス</th>
              <th>登録日</th>
              <th>更新日</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td>
                  <%= link_to admin_user_path(user) do %>
                    <%= image_tag user.get_profile_image(50,50), class: "rounded-circle" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user.name, admin_user_path(user) %>
                </td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
                <td><%= user.updated_at.strftime("%Y-%m-%d") %></td>
                <td>
                  <%= user.status ? "利用中" : "退会済み" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
