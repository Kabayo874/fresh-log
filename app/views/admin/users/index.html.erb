<div class="col-lg-9">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto border rounded-5 px-0 my-5 overflow-hidden">
        <h5 class="text-dark bg-light p-4 mb-0">全ユーザー一覧</h5>

        <div class="table-responsive p-4">
          <table class="table table-striped table-hover text-center align-middle">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>名前</th>
                <th>メールアドレス</th>
                <th>登録日</th>
                <th>更新日</th>
                <th>ステータス</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
                  <td><%= user.updated_at.strftime("%Y-%m-%d") %></td>
                  <td>
                    <%= user.status ? "有効" : "退会済み" %>
                  </td>
                  <td>
                    <% if user.status %>
                      <%= link_to "退会させる", admin_user_path(user), method: :delete, data: { confirm: "本当に退会処理しますか？" } %>
                    <% else %>
                      退会済み
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>
