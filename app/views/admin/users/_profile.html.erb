<div class="text-center mt-5">
  <div>
  <%= image_tag user.get_profile_image(50, 50),
  style: "width: 150px; height: 150px; object-fit: cover;",
  class: "rounded-circle" %>
  </div>
  <h5><%= user.name %></h5>
</div>
<div class="mt-5">
  <p><%= user.profile %></p>
</div>

<div>
  <div><%= link_to "投稿一覧", admin_user_path(user), class: "user-menu btn btn-primary text-start" %></div>
  <div><%= link_to "グループ一覧", groups_admin_user_path(user), class: "user-menu btn btn-primary text-start" %></div>
  <div class="mt-4">
    <% case user.status %>
    <% when "active" %>
      <%= link_to "退会させる", admin_user_path(user),
          method: :delete,
          data: { confirm: "本当に退会処理しますか？" },
          class: "btn btn-danger fw-bold px-4 py-2" %>
    <% when "withdrawn" %>
      <span class="badge bg-secondary fs-6 px-3 py-2">自主退会済み</span>
    <% when "deactivated" %>
      <span class="badge bg-danger fs-6 px-3 py-2">強制停止中</span>
    <% end %>
  </div>
</div>

