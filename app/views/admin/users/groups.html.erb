<div class="container">
  <div class="row d-flex flex-wrap m-5">
    <div class="col-lg-3">
      <%= render 'profile', user: @user %>
    </div>

    <div class="col-12 col-lg-9 mb-4">
      <div class="row">
        <h4>所属グループ一覧</h4>
      </div>

      <div class="row">

        <% if @groups.any? %>
          <% @groups.each do |group| %>
            <div class="col-12 col-sm-6 col-md-4 col-lg-4 mb-4">
              <div class="card h-100 position-relative rounded-4">

                <%= link_to admin_group_path(group.id) do %>
                  <%= image_tag group.image, class: "card-img-top object-fit-cover" %>
                <% end %>
                <div class="card-body d-flex flex-column">

                  <div class="mb-auto">
                    <%= link_to admin_group_path(group.id) do %>
                      <h5 class="card-title"><%= group.name %></h5>
                      <p class="card-text"><%= truncate(group.discription, length: 40) %><p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
