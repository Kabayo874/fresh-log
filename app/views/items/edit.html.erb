

<div class="container">
  <div class="row d-flex flex-wrap m-5">
    <div class="col-lg-3">
      <% if params[:group_id].present? %>
        <%= render 'groups/group_profile', group: @item.group %>
      <% else %>
        <%= render 'users/profile', user: @item.user %>
      <% end %>
    </div>

    <div class="col-lg-9">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto border rounded-5 px-0 my-5 overflow-hidden">
            <h5 class="text-dark bg-light p-4 mb-0">商品投稿編集</h5>
            <div class="form-body p-4">
              <%= form_with model: @item do |f| %>
                <%= render 'layouts/error_messages', model: form.object %>

                <div>
                  <label for="title">ニックネーム</label>
                  <%= f.text_field :title, autofocus: true, id:"title", placeholder:"商品名", class: "form-control" %>
                </div>
                <div class="pt-2">
                  <label for="comment">コメント</label>
                  <%= f.text_area :body, autofocus: true, id:"comment", placeholder:"コメント", class: "form-control" %>
                </div>
                <div class="pt-2">
                  <label for="inputImage">商品画像</label>
                  <%= f.file_field :image, id:"inputImage", placeholder: "画像", accept: "image/*" %>
                </div>
                <div class="pt-2">
                  <%= f.submit "変更を保存", class: "btn btn-secondary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>