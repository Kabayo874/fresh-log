<h1>編集画面</h1>
<%= form_with model: @item do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>

  <div class="pt-2">
    <label for="image">Image</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  
  <div>
    <%= f.submit '保存' %>
  </div>


  
<% end %>