<h1>編集画面</h1>
<%= form_with model: @item do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <div>
    <%= f.submit '保存' %>
  </div>

  <div>
    <% if @item.user == current_user %>
      <%= link_to "削除", item_path(@item), method: :delete %>
    <% end %>
  </div>
  
<% end %>