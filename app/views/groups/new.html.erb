<%= render 'group_profile', group: @group %>


<%= form_with model: @group do |f| %>
  <div>
    <label for="name">グループ名</label>
    <%= f.text_field :name, id:"name", class: "form-control" %>
  </div>
  <div class="pt-2">
    <label for="discription">グループの説明</label>
    <%= f.text_area :discription, id:"discription", class: "form-control" %>
  </div>

  <div class="pt-2">
    <label for="image">グループ画像</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="pt-2">
    <%= f.submit '登録', class: "btn btn-success" %>
  </div>
<% end %>