<div>
  <h3><%= @group.name %></h3>
  <%= image_tag @group.image, size: "150x150" %>
  <div>
    <p>説明：<%= @group.discription %></p>
  </div>
  <div>
    <%= @group.owner_user.name %>
</div>

<div>
  <% @group.group_members.each do |member| %>
    <%= link_to user_path(member.id) do %>
      <%= image_tag member.user.get_profile_image(100,100) %>
      <%= member.user.name %>
    <% end %>
  <% end %>
</div>

<div>
  <% @items.each do |item| %>
    <%= link_to item_path(item.id) do %>
      <%= image_tag item.image, size: "150x150" %>
    <% end %>
    <p>投稿ユーザー画像：<%= image_tag item.user.get_profile_image(100,100) %></p>
    <p>タイトル：<%= item.title %></p>
    <p>説明：<%= item.body %></p>
    <p>ユーザーネーム：<%= item.user.name %></p>
  <% end %>
</div>