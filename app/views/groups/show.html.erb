<div>
  <h3><%= @group.name %></h3>
  <%= image_tag @group.image, size: "150x150" %>
  <div>
    <p>説明：<%= @group.discription %></p>
  </div>
</div>



<div>
  <% @items.each do |item| %>
    <%= link_to item_path(item.id) do %>
      <%= image_tag item.image, size: "150x150" %>
    <% end %>
    <p>投稿ユーザー画像：<%= image_tag item.user.get_profile_image(100,100) %></p>
    <p>タイトル：<%= item.title %></p>
    <p>説明：<%= item.body %></p>
    <p>ユーザーネーム：<%= item.user.name %></p>
  <% end %>
</div>