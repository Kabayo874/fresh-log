<div class="text-center mt-5">
  <%= link_to edit_user_path(current_user) do %>
    <%= image_tag user.get_profile_image(150,150), class: "rounded-circle mb-3" %>
  <% end %>
  <h5><%= user.name %></h5>
</div>
<div class="mt-5">
  <p><%= user.profile %></p>
</div>

<div>
  <div><%= link_to "投稿一覧", user_path(user) %></div>
  <div><%= link_to "グループ一覧", groups_user_path(user) %></div>
  <% if user == current_user %>
    <div><%= link_to "プロフィール編集", edit_user_path(current_user) %></div>
  <% end %>
</div>
